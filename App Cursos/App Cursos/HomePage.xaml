<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Cursos.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#6c25be" Padding="24" CornerRadius="0">
                <Label Text="Home Page" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Button Margin="20,20" BackgroundColor="#CB9CD2" BorderColor="#C8C0D3" BorderWidth="2" CornerRadius="20" Text="Registrar Empleado" x:Name="btnRegistrar_Empleado"
            Clicked="Registrar_Empleado_Button_Clicked" />
            <Button Margin="20,2" BackgroundColor="#CB9CD2" BorderColor="#C8C0D3" BorderWidth="2" CornerRadius="20" Text="Registrar Curso" x:Name="btnRegistrar_Cursos"
            Clicked="Registrar_Cursos_Button_Clicked" />
            <Button Margin="20,20" BackgroundColor="#CB9CD2" BorderColor="#C8C0D3" BorderWidth="2" CornerRadius="20" Text="Seguimiento de Curso" x:Name="btnSeguimiento_Curso"
            Clicked="btnSeguimiento_Curso_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>