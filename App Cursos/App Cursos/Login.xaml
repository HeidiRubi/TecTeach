<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Cursos.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#6c25be" Padding="24" CornerRadius="0">
                <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label Text="Autentificar para Continuar" FontSize="Title" />
            <Label Text="Email" />
            <Entry Placeholder="example@gmail.com" x:Name="txtEmailLog" Keyboard="Email" />
            <Label Text="Contraseña" />
            <Entry Placeholder="*******" x:Name="txtContraLog" IsPassword="True" />
            <Button Margin="20,20" Text="Login" Clicked="Button_Login" BackgroundColor="#CB9CD2"
                    BorderColor="#C8C0D3"
                    BorderWidth="2"
                    CornerRadius="20" 
                    />
            <Button Margin="20,2" Text="Registrarse" Clicked="Button_Registrarse" BackgroundColor="#CB9CD2"
                    BorderColor="#C8C0D3"
                    BorderWidth="2"
                    CornerRadius="20" 
                    />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>